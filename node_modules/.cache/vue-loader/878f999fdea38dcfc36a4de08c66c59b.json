ialogTitle2\" width=\"60%\" :visible.sync=\"dialogFormVisible\">\r\n        <el-form :model=\"customerForm\">\r\n          <el-form-item\r\n            v-for=\"(item, index) in customerForm.customer\"\r\n            :key=\"item.key\"\r\n            :label=\"'客户'+ index\"\r\n            prop=\"customer\"\r\n            :rules=\"{required: true, message: '姓名和身份证不能为空', trigger: 'blur'}\"\r\n          >\r\n            <el-input v-model=\"item.customer_name\" placeholder=\"姓名\" />\r\n            <el-input v-model=\"item.customer_idcard\" placeholder=\"身份证\" />\r\n            <el-button @click.prevent=\"removeDomain(item)\">删除</el-button>\r\n          </el-form-item>\r\n          <el-form-item>\r\n            <el-button @click=\"addCustomer\">新增客户</el-button>\r\n          </el-form-item>\r\n          <el-form-item>\r\n            <el-button @click=\"confirm\">确认</el-button>\r\n          </el-form-item>\r\n        </el-form>\r\n      </el-dialog>\r\n\r\n      <el-dialog :title=\"dialogTitle\" width=\"60%\" :visible.sync=\"dialogFormVisible2\">\r\n        <el-form :model=\"order\">\r\n          <el-form-item label=\"消费方式\">\r\n            <el-select v-model=\"order.cost_type\" placeholder=\"请选择\">\r\n              <el-option\r\n                v-for=\"item in cost_type\"\r\n                :key=\"item.value\"\r\n                :label=\"item.label\"\r\n                :value=\"item.label\"\r\n              />\r\n            </el-select>\r\n          </el-form-item>\r\n          <el-form-item>\r\n            <el-button @click=\"cost\">确认</el-button>\r\n          </el-form-item>\r\n        </el-form>\r\n      </el-dialog>\r\n    </div>\r\n\r\n    <div v-show=\"checkflag\">\r\n      <el-form\r\n        ref=\"checkin\"\r\n        :model=\"checkin\"\r\n        label-width=\"80px\"\r\n        :inline=\"true\"\r\n      >\r\n        <el-form-item label=\"入住时间\" prop=\"check_arrire\">\r\n          <el-col :span=\"11\">\r\n            <el-date-picker\r\n              v-model=\"checkin.check_arrire\"\r\n              type=\"datetime\"\r\n              placeholder=\"选择日期\"\r\n              style=\"width: 190%\"\r\n              default-time=\"12:00:00\"\r\n              format=\"yyyy-MM-dd HH:mm:ss\"\r\n              value-format=\"yyyy-MM-dd HH:mm:ss\"\r\n            />\r\n          </el-col>\r\n        </el-form-item>\r\n        <el-form-item label=\"退房时间\" prop=\"check_leave\">\r\n          <el-col :span=\"11\">\r\n            <el-date-picker\r\n              v-model=\"checkin.check_leave\"\r\n              type=\"datetime\"\r\n              placeholder=\"选择日期\"\r\n              style=\"width: 190%\"\r\n              default-time=\"12:00:00\"\r\n              format=\"yyyy-MM-dd HH:mm:ss\"\r\n              value-format=\"yyyy-MM-dd HH:mm:ss\"\r\n              @change=\"calTime\"\r\n            />\r\n          </el-col>\r\n        </el-form-item>\r\n        <el-form-item label=\"入住人数\" prop=\"check_person\">\r\n          <el-input v-model=\"checkin.check_person\" />\r\n        </el-form-item>\r\n        <el-form-item>\r\n          <el-button @click=\"showRoom\">选择客房</el-button>\r\n        </el-form-item>\r\n        <el-form-item label=\"客房编号\" prop=\"room_id\">\r\n          <el-input v-model=\"checkin.room_id\" />\r\n        </el-form-item>\r\n        <el-form-item label=\"入住价格\" prop=\"check_price\">\r\n          <el-input v-model=\"checkin.check_price\" />\r\n        </el-form-item>\r\n        <el-form-item label=\"操作\">\r\n          <el-button\r\n            size=\"mini\"\r\n            @click=\"hanldeCustomer()\"\r\n          >添加客户信息\r\n          </el-button>\r\n          <el-button\r\n            size=\"mini\"\r\n            @click=\"hanldeCost()\"\r\n          >添加消费方式\r\n          </el-button>\r\n          <el-button\r\n            size=\"mini\"\r\n            @click=\"onCheck()\"\r\n          >办理入住\r\n          </el-button>\r\n        </el-form-item>\r\n      </el-form>\r\n    </div>\r\n\r\n    <div>\r\n      <el-dialog :title=\"dialogTitle3\" width=\"60%\" :visible.sync=\"dialogFormVisible3\">\r\n        <el-form :inline=\"true\" :model=\"roomwrappers\">\r\n          <el-form-item label=\"客房类型\">\r\n            <el-select v-model=\"roomwrappers.type_id\" placeholder=\"请选择\">\r\n              <el-option\r\n                v-for=\"item in type\"\r\n                :key=\"item.type_id\"\r\n                :label=\"item.type_name\"\r\n                :value=\"item.type_id\"\r\n              />\r\n            </el-select>\r\n          </el-form-item>\r\n        </el-form>\r\n        <el-table\r\n          :data=\"roomData\"\r\n          border\r\n        >\r\n          <el-table-column\r\n            prop=\"room_id\"\r\n            label=\"客房编号\"\r\n          />\r\n          <el-table-column\r\n            prop=\"type_id\"\r\n            label=\"客房类型\"\r\n          >\r\n            <template slot-scope=\"scope\">\r\n              <span\r\n                v-for=\"item in type\"\r\n                v-show=\"scope.row.type_id == item.type_id\"\r\n                :key=\"item.type_id\"\r\n                :value=\"item.type_id\"\r\n              >\r\n                {{ item.type_name }}\r\n              </span>\r\n            </template>\r\n          </el-table-column>\r\n\r\n          <el-table-column\r\n            prop=\"room_floor\"\r\n            label=\"楼层\"\r\n          />\r\n          <el-table-column\r\n            prop=\"room_status\"\r\n            label=\"状态\"\r\n          >\r\n            <template slot-scope=\"scope\">\r\n              <span\r\n                v-for=\"item in status\"\r\n                v-show=\"scope.row.room_status == item.value\"\r\n                :key=\"item.type_id\"\r\n                :value=\"item.type_id\"\r\n              >\r\n                {{ item.label }}\r\n              </span>\r\n            </template>\r\n          </el-table-column>\r\n          <el-table-column\r\n            label=\"操作\"\r\n          >\r\n            <template slot-scope=\"scope\">\r\n              <el-button\r\n                size=\"mini\"\r\n                type=\"danger\"\r\n                @click=\"handleChoose(scope.row)\"\r\n              >选择\r\n              </el-button>\r\n            </template>\r\n          </el-table-column>\r\n        </el-table>\r\n      </el-dialog>\r\n    </div>\r\n  </div>\r\n</template>\r\n<script>\r\nimport { mapGetters } from 'vuex'\r\nimport { getCommitBook, deleteById } from '@/api/book'\r\nimport { addCustomer } from '@/api/customer'\r\nimport { check } from '@/api/checkin'\r\nimport { addOne } from '@/api/order'\r\nimport { getEmptyRoomWithType, changeStatus } from '@/api/room'\r\nimport { getDiscount } from '@/api/discount'\r\nimport { getTypeList } from '@/api/type'\r\nexport default {\r\n  data() {\r\n    return {\r\n      hidden: true,\r\n      flag: false,\r\n      checkflag: false,\r\n      dialogFormVisible: false,\r\n      dialogTitle: '添加客户信息',\r\n      dialogFormVisible2: false,\r\n      dialogTitle2: '消费方式',\r\n      dialogFormVisible3: false,\r\n      dialogTitle3: '客房列表',\r\n      roomwrappers: {\r\n        type_id: ''\r\n      },\r\n      tableData: [{}],\r\n      type: [{}],\r\n      status: [\r\n        { value: 0, label: '空闲' },\r\n        { value: 1, label: '已入住' }\r\n      ],\r\n      checkin_id: '',\r\n      orders_id: '',\r\n      room_id: '',\r\n      customerForm: {\r\n        customer: [{\r\n          customer_name: '',\r\n          customer_idcard: ''\r\n        }]\r\n      },\r\n      discount: [{}],\r\n      roomData: [{}],\r\n      checkin: {},\r\n      order: {},\r\n      cost_type: [{ value: 0, label: '线上支付' }, { value: 1, label: '现金支付' }]\r\n\r\n    }\r\n  },\r\n  computed: {\r\n    ...mapGetters([\r\n      'id'\r\n    ])\r\n  },\r\n  watch: {\r\n    'roomwrappers.type_id'(val) {\r\n      getEmptyRoomWithType(val).then(res => {\r\n        if (res.code === 200) {\r\n          this.roomData = res.data\r\n        } else {\r\n          this.$notify({\r\n            title: res.data,\r\n            type: 'error'\r\n          })\r\n        }\r\n      })\r\n    }\r\n  },\r\n  mounted() {\r\n    getTypeList().then(res => {\r\n      if (res.code === 200) {\r\n        this.type = res.data\r\n      }\r\n    })\r\n    getDiscount().then(res => {\r\n      if (res.code === 200) {\r\n        this.discount = res.data\r\n      }\r\n    })\r\n  },\r\n  methods: {\r\n    calTime() {\r\n      const stime = this.checkin.check_arrire\r\n      const etime = this.checkin.check_leave\r\n      const usedTime = Date.parse(etime) - Date.parse(stime)\r\n      const days = Math.floor(usedTime / (24 * 3600 * 1000))\r\n      this.checkin.check_day = days\r\n    },\r\n    gotReservation() {\r\n      this.hidden = false\r\n      this.flag = true\r\n      getCommitBook().then(res => {\r\n        if (res.code === 200) {\r\n          this.tableData = res.data\r\n        } else {\r\n          this.$notify({\r\n            title: res.data,\r\n            type: 'error'\r\n          })\r\n        }\r\n      })\r\n    },\r\n    live() {\r\n      this.hidden = false\r\n      this.checkflag = true\r\n    },\r\n    hanldeCustomer() {\r\n      this.dialogFormVisible = true\r\n    },\r\n    removeDomain(item) {\r\n      var index = this.customerForm.customer.indexOf(item)\r\n      if (index !== -1) {\r\n        this.customerForm.customer.splice(index, 1)\r\n      }\r\n    },\r\n    addCustomer() {\r\n      this.customerForm.customer.push({\r\n        customer_name: '',\r\n        customer_idcard: ''\r\n      })\r\n    },\r\n    confirm() {\r\n      this.dialogFormVisible = false\r\n    },\r\n    hanldeCost() {\r\n      this.dialogFormVisible2 = true\r\n    },\r\n    cost() {\r\n      this.dialogFormVisible2 = false\r\n    },\r\n    showRoom() {\r\n      this.dialogFormVisible3 = true\r\n    },\r\n    handleChoose(row) {\r\n      this.checkin.room_id = row.room_id\r\n      let obj = {}\r\n      let dis = {}\r\n      dis = this.type.find((item) => {\r\n        return item.type_id === row.type_id\r\n      })\r\n      obj = this.discount.find((item) => {\r\n        return item.discount_id === dis.discount_id\r\n      })\r\n      this.checkin.type_id = dis.type_id\r\n      this.checkin.type_name = dis.type_name\r\n      this.checkin.type_price = dis.type_price\r\n      this.checkin.dis_value = obj.discount_value\r\n      this.checkin.discount_reason = obj.discount_reason\r\n      this.checkin.check_price = parseFloat(dis.type_price) * parseFloat(obj.discount_value)\r\n      this.dialogFormVisible3 = false\r\n    },\r\n    onSubmit(row) {\r\n      row.staff_id = this.id\r\n      row.check_arrire = row.book_arrire\r\n      row.check_leave = row.book_leave\r\n      row.check_person = row.book_person\r\n      row.check_day = row.book_day\r\n      row.check_price = row.book_price\r\n      this.room_id = row.room_id\r\n      check(row).then(res => {\r\n        if (res.code === 200) {\r\n          this.checkin_id = res.data\r\n          changeStatus(row.room_id)\r\n          deleteById(row.book_id).then(res => {\r\n            getCommitBook().then(res => {\r\n              if (res.code === 200) {\r\n                this.tableData = res.data\r\n              }\r\n            })\r\n          })\r\n          this.$notify({\r\n            title: '登记成功',\r\n            type: 'success'\r\n          })\r\n          if (this.order.cost_type !== '') {\r\n            this.order.cost_money = row.book_price\r\n            this.order.checkin_id = this.checkin_id\r\n            this.order.room_id = row.room_id\r\n            this.order.staff_id = this.id\r\n            addOne(this.order).then(res => {\r\n              if (res.code === 200) {\r\n                this.orders_id = res.data.orders_id\r\n                this.customerForm.customer.forEach((item) => {\r\n                  item.checkin_id = this.checkin_id\r\n                  item.orders_id = this.orders_id\r\n                  item.room_id = this.room_id\r\n                  addCustomer(item)\r\n                })\r\n                this.$notify({\r\n                  title: '订单生成成功',\r\n                  type: 'success'\r\n                })\r\n              }\r\n            })\r\n          }\r\n        } else {\r\n          this.$notify({\r\n            title: res.data,\r\n            type: 'error'\r\n          })\r\n        }\r\n      })\r\n    },\r\n    onCheck() {\r\n      this.checkin.staff_id = this.id\r\n      this.room_id = this.checkin.room_id\r\n      check(this.checkin).then(res => {\r\n        if (res.code === 200) {\r\n          this.checkin_id = res.data\r\n          changeStatus(this.checkin_id.room_id)\r\n          this.$notify({\r\n            title: '登记成功',\r\n            type: 'success'\r\n          })\r\n          if (this.order.cost_type !== '') {\r\n            this.order.cost_money = this.checkin.check_price\r\n            this.order.checkin_id = this.checkin_id\r\n            this.order.room_id = this.checkin.room_id\r\n            this.order.staff_id = this.id\r\n            addOne(this.order).then(res => {\r\n              if (res.code === 200) {\r\n                this.orders_id = res.data.orders_id\r\n                this.customerForm.customer.forEach((item) => {\r\n                  item.checkin_id = this.checkin_id\r\n                  item.orders_id = this.orders_id\r\n                  item.room_id = this.room_id\r\n                  addCustomer(item)\r\n                })\r\n                this.$notify({\r\n                  title: '订单生成成功',\r\n                  type: 'success'\r\n                })\r\n              }\r\n            })\r\n          }\r\n        } else {\r\n          this.$notify({\r\n            title: res.data,\r\n            type: 'error'\r\n          })\r\n        }\r\n      })\r\n    }\r\n  }\r\n}\r\n</script>\r\n<style lang=\"css\">\r\n.el-form{\r\n  width: 30%;\r\n  margin-left: 30px;\r\n  margin-top: 30px;\r\n}\r\n\r\n.button-container{\r\n  margin: 0\r\n}\r\n</style>\r\n"]}]}