=> {\r\n            if (res.code === 200) {\r\n              this.tableData = res.data\r\n            } else {\r\n              this.$notify({\r\n                title: res.data,\r\n                type: 'error'\r\n              })\r\n            }\r\n          })\r\n        } else {\r\n          this.$notify({\r\n            title: res.data,\r\n            type: 'error'\r\n          })\r\n        }\r\n      })\r\n\r\n      this.dialogFormVisible = false\r\n    },\r\n    onSubmit(row) {\r\n      this.$confirm('确定无误提交吗？', '提示', {\r\n        confirmButtonText: '确定',\r\n        cancelButtonText: '取消',\r\n        type: 'info'\r\n      }).then(() => {\r\n        update(row.book_id, this.id).then(res => {\r\n          if (res.code === 200) {\r\n            this.$notify({\r\n              title: res.data,\r\n              type: 'success'\r\n            })\r\n            getBookNotCommit().then(res => {\r\n              if (res.code === 200) {\r\n                this.tableData = res.data\r\n              } else {\r\n                this.$notify({\r\n                  title: res.data,\r\n                  type: 'error'\r\n                })\r\n              }\r\n            })\r\n          } else {\r\n            this.$notify({\r\n              title: res.data,\r\n              type: 'error'\r\n            })\r\n          }\r\n        })\r\n      }).catch(() => {\r\n        this.$message({\r\n          type: 'info',\r\n          message: '已取消提交'\r\n        })\r\n      })\r\n    }\r\n  }\r\n}\r\n</script>\r\n<style lang=\"\">\r\n.el-table {\r\n  box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.1);\r\n  border-radius: 4px\r\n}\r\n  .block{\r\n  position: relative;\r\n  margin-top: 5%;\r\n  left:30%;\r\n}\r\n</style>\r\n"]}]}